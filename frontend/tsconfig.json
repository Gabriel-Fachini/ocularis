{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",                          
    "module": "commonjs",                     
    "lib": ["es6", "DOM", "DOM.Iterable", "scriptHost"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./",                      
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "esModuleInterop": true,
    "moduleResolution": "node",                 
    "resolveJsonModule": true,
    "experimentalDecorators": true,   
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {},
  },
  "exclude": ["node_modules", "dist", "coverage", "test", "types", "src/vite-env.d.ts"]
}